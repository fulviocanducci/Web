@model Models.Car
@{
   ViewData["Title"] = "Inserir Carro";
}
<h1>Carro - Inserir</h1>
<hr />
<div class="row">
   <div class="col-md-4">
      <form asp-action="@(Model == null ? "Create": "Edit")">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         @if (Model != null && Model?.Id != null)
         {
            <input asp-for="Id" class="form-control" type="hidden" />
         }
         <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="form-group mt-2 mb-2">
            <input type="submit" value="@(Model == null ? "Inserir": "Alterar")" class="btn btn-primary btn-sm" /> | 
            <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
         </div>
      </form>
   </div>
</div>
@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}